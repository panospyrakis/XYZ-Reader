<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Bacon" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@color/theme_primary</item>
        <item name="android:colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="android:colorAccent">@color/theme_accent</item>
    </style>

    <style name="Theme.Bacon.Detail">
        <item name="android:statusBarColor">@color/theme_primary_dark</item>
    </style>

    <style name="Theme.Bacon.actionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorPrimary">@color/theme_primary</item>
        <item name="android:colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="android:colorAccent">@color/theme_accent</item>
    </style>


    <style name="Theme.Bacon.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Bacon.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.ExpandedTitleTextAppearence" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.CollapsedTitleTextAppearence" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textSize">15sp</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:lineSpacingExtra">-1sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>